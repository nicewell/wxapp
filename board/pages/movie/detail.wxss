/* pages/movie/detail.wxss */
.page{
	background-color: #242424;
	color: #ccc;
	line-height: 1.2em;
}
.section-video{}
.section-video video{
	width: 100%;
	height: 420rpx;
}
.video-tit{
	padding: 20rpx;
	font-size: 40rpx;
	text-align: center;
}
.movie-info{
	position: relative;
	display: flex;
	flex-flow: row wrap;
	justify-content: flex-start;
	font-size: 26rpx;
	padding: 20rpx;
}
.movie-info .cover{
	position: relative;
	width: 270rpx;
	height: 378rpx;
	margin-right: 20rpx;
}
.movie-info .cover image{
	display: block;
	width: 100%;
	height: 100%;
}
.movie-info .average{
	position: absolute;
	z-index: 10;
	left: 0;
	top: 0;
	max-width: 100%;
	box-sizing: border-box;
	padding: 6rpx 10rpx;
	font-size: 24rpx;
	color: #fff;
	background-color: #f77603;
}
.movie-txt{
	flex: 1;
	display: flex;
	flex-flow: column nowrap;
	justify-content: flex-start;
}
.movie-txt>text{
	margin-bottom: 20rpx;
}
.movie-info .summary{
	padding: 30rpx 0;
	width: 100%;
	display: flex;
	flex-flow: column nowrap;
	justify-content: flex-start;
}
.movie-info .summary-tit{
	font-size: 32rpx;
	margin-bottom: 10rpx;
}
